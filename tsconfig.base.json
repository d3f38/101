{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "isolatedModules": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@pages/*": ["pages/*"],
      "@test/*": ["test/*"],
      "@icons/*": ["src/components/icons/*"]
    },
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "skipLibCheck": true,
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "node_modules",
    "./out",
    "./configs",
    "__tests__"
  ],
  "include": [
    "pages",
    "src",
    "types",
    "next-env.d.ts"
  ]
}
